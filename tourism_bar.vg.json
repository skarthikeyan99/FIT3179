{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": 800,
  "height": 400,
  "title": {
    "text": "Top 10 Countries by Air Passengers Carried in 2019",
    "fontSize": 16,
    "font": "Montserrat"
  },
  "data": {
    "url": "https://raw.githubusercontent.com/skarthikeyan99/FIT3179/main/air-passengers-carried.csv"
  },
  "transform": [
    { "filter": "datum.Year == 2019" },
    {
      "filter": "datum.Entity == 'United States' || datum.Entity == 'China' || datum.Entity == 'Ireland' || datum.Entity == 'India' || datum.Entity == 'United Kingdom' || datum.Entity == 'Japan' || datum.Entity == 'Turkey' || datum.Entity == 'Germany' || datum.Entity == 'Russia' || datum.Entity == 'Brazil' || datum.Entity == 'United Arab Emirates'"
    },
    {
      "sort": [
        { "field": "Air transport, passengers carried", "order": "descending" }
      ],
      "limit": 10
    }
  ],
  "mark": "bar",
  "encoding": {
    "y": {
      "field": "Entity",
      "type": "nominal",
      "sort": "-x",
      "axis": { "title": "Country" }
    },
    "x": {
      "field": "Air transport, passengers carried",
      "type": "quantitative",
      "axis": {
        "title": "Passengers Carried",
        "tickCount": 5,
        "labelExpr": "datum.value / 1000000 + 'M'"
      }
    },
    "color": {
      "field": "Entity",
      "type": "nominal",
      "scale": { "scheme": "category10" },
      "legend": null
    },
    "tooltip": [
      { "field": "Entity", "type": "nominal", "title": "Country" },
      {
        "field": "Air transport, passengers carried",
        "type": "quantitative",
        "title": "Passengers Carried",
        "format": ",.0f"
      }
    ]
  },
  "config": {
    "font": "Montserrat",
    "axis": {
      "labelFont": "Montserrat",
      "titleFont": "Montserrat"
    },
    "legend": {
      "labelFont": "Montserrat",
      "titleFont": "Montserrat"
    }
  }
}
