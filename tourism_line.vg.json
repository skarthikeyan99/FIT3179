{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": 800,
  "height": 400,
  "title": {
    "text": "Global Air Passengers Carried (1970-2020)",
    "fontSize": 16,
    "font": "Montserrat"
  },
  "data": {
    "url": "https://raw.githubusercontent.com/skarthikeyan99/FIT3179/main/air-passengers-carried-world.csv"
  },
  "mark": {
    "type": "line",
    "point": true
  },
  "encoding": {
    "x": {
      "field": "Year",
      "type": "temporal",
      "axis": {
        "title": "Year",
        "labelAngle": 0,
        "format": "%Y"
      }
    },
    "y": {
      "field": "Air transport, passengers carried",
      "type": "quantitative",
      "axis": {
        "title": "Passengers Carried (billions)",
        "format": "~s",
        "labelExpr": "datum.value / 1e9"
      }
    },
    "tooltip": [
      { "field": "Year", "type": "temporal", "title": "Year", "format": "%Y" },
      {
        "field": "Air transport, passengers carried",
        "type": "quantitative",
        "title": "Passengers Carried",
        "format": ","
      }
    ]
  },
  "config": {
    "font": "Montserrat",
    "axis": {
      "labelFont": "Montserrat",
      "titleFont": "Montserrat"
    },
    "legend": {
      "labelFont": "Montserrat",
      "titleFont": "Montserrat"
    }
  }
}
